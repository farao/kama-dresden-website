<!DOCTYPE html>
<html>
<head>
  <title>Kama</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<div id="container">

<div id="header">
  <%= image_tag 'kama_logo.png', id: 'header-logo', desc: 'KAMA Dresden e.V.' %>
  
  <div id="navWrapper">
    <div id="navbar">
      <ul class="menu">
        <li><%= link_to 'Ãœber Kama', '/about', class: cp('about') %></li>
        <li><%= link_to 'Kurse', '/courses', class: cp('courses') %></li>
        <li><%= link_to 'Impressum', '/impressum', class: cp('impressum') %></li>
      </ul>
      <%= image_tag 'kama_logo_med.png', id: 'navLogo' %>
      <ul id="login-small">
        <li><%= link_to image_tag('user.png'), 'javascript:void(0);', id: 'user-login' %></li>
      </ul>
      <% if current_user %>
        <ul id="login">
          <li id="login-status">You are logged in as "<%= current_user.full_name %>"!</li>
          <li><%= link_to 'Ausloggen', destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul id="login">
          <li><%= link_to 'Einloggen', new_user_session_path %></li>
        </ul>
      <% end %>
    </div>
    
  </div>


</div>

<% unless notice.nil? %><div id="notice"><%= notice %></div><% end %>
<% unless alert.nil? %><div id="alert"><%= alert %></div><% end %>

<div id="content">

<%= yield %>

</div>

</div>

<div id="footer">
  <%= image_tag 'creative_commons.png', alt: 'creative commons', style: 'position:relative;top:3px;' %>
  KAMA Dresden e.V.
</div>

</body>
</html>
