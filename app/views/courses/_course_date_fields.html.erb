<fieldset>
  <%= f.label :time %>
  <%= f.text_field :time, :as => :datetimepicker %>
  <%= f.label :place %>
  <%= f.collection_select :place, Place.remembered.sort_by {|p| p.name}, :id, :name %>
  <%= f.hidden_field :new_place_name, data: {type: 'name' } %>
  <%= f.hidden_field :new_place_lat, data: {type: 'lat' } %>
  <%= f.hidden_field :new_place_lon, data: {type: 'lon' } %>
  <%= f.hidden_field :_destroy %>
  <%= link_to image_tag('x.png', alt: 'remove', class: 'btn'), '#', class: "remove_fields" %>
</fieldset>
